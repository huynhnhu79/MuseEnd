<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ThongtinActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/hongpastel">
        <ImageButton
            android:id="@+id/imvBackAccount"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back"
            android:background="@color/hongpastel"
            />
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/acc_title"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

    </Toolbar>

    <TextView
        android:id="@+id/muc_tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/acc_ttcn"
        android:textSize="20sp"
        android:textAlignment="center"
        android:padding="9dp"
        android:textStyle="normal"
        android:textColor="@color/xam"
        android:layout_margin="11dp">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/acc_name"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:textStyle="normal"
                    android:textColor="@color/xam"/>
                <EditText
                    android:id="@+id/edit_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="7dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/acc_mail"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:textStyle="normal"
                    android:textColor="@color/xam"/>
                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="7dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">
                <TextView
                    android:id="@+id/txtTen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/acc_user"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:textStyle="normal"
                    android:textColor="@color/xam"/>
                <EditText
                    android:id="@+id/edit_ttk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="7dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/acc_date"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:textStyle="normal"
                    android:textColor="@color/xam"/>
                <EditText
                    android:id="@+id/edit_sinhnhat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="7dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:hint="@string/acc_dd_mm_yyyy"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/acc_sex"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:textStyle="normal"
                    android:textColor="@color/xam"/>
                <RadioGroup
                    android:id="@+id/rg_GT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp">
                <RadioButton
                    android:id="@+id/rd_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/acc_fem"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:checked="true"
                    android:padding="17dp" />

                    <RadioButton
                        android:id="@+id/rd_nam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/acc_male"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:checked="false"
                        android:padding="17dp"
                        android:layout_marginStart="87dp"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/acc_diachi"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:textStyle="normal"
                    android:textColor="@color/xam"/>
                <EditText
                    android:id="@+id/edit_dc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="7dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnCapNhat"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_buton_corner"
                android:textSize="18sp"
                android:text="@string/acc_update"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:layout_margin="51dp"
                android:layout_gravity="center"></Button>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>