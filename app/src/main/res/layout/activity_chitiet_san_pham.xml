<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChitietSanPhamActivity"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/hongpastel">

                <ImageView
                    android:id="@+id/imvBackDMAo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_arrow_back"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="6dp"
                    />

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:layout_marginLeft="20dp"
                    android:hint="@string/pd_find"/>
            </androidx.appcompat.widget.Toolbar>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

            <ImageView
                android:id="@+id/imvThumbSP"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/aokhoac1"
                />
            <TextView
                android:id="@+id/txtNameSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pd_name"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/xanhdam"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtPriceSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pd_price"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/xanhdam"
                />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pd_descrip"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/xanhdam"/>
            <TextView
                android:id="@+id/txtDetailSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pd_info"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/xanhdam"
                android:background="@color/white"/>

                </LinearLayout>
            </ScrollView>


        </LinearLayout>



    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnAddGiohang"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/hongtrang"
        android:text="@string/pd_add"
        android:textColor="@color/xanhdam"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>